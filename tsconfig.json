{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"strictNullChecks": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@modules/*": [
				"src/modules/*"
			],
			"@libs/*": [
				"src/lib/*"
			],
			"@app/*": [
				"src/app/*"
			],
			"@react-components/*": [
				"src/shared/React/*"
			],
			"@vue-components/*": [
				"src/shared/Vue/*"
			]
		}
	}
}